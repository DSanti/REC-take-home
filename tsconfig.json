{
    "compilerOptions": {
        "module": "nodenext",
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
